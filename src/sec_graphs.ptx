								<cell>16.6</cell>
								<cell>8.1</cell>
								<cell>8.5</cell>
								<cell>16.9</cell>
								<cell>14.1</cell>
								<cell>17.5</cell>
							</row>
							<row>
								<cell>9.1</cell>
								<cell>13.0</cell>
								<cell>8.7</cell>
								<cell>16.0</cell>
								<cell>16.6</cell>
