							<row>
								<cell>9.4</cell>
								<cell>14.2</cell>
								<cell>12.7</cell>
								<cell>8.4</cell>
								<cell>13.0</cell>
								<cell>12.2</cell>
								<cell>16.2</cell>
								<cell>12.0</cell>
							</row>
							<row>
								<cell>9.7</cell>
								<cell>11.2</cell>
								<cell>8.9</cell>
